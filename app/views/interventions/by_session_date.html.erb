<h1>Actividad</h1>
<p class="claim">Qué ocurre en el Parlamento Vasco</p>

<!-- tab_system -->
<div class="tab_system tab_system_discussions">
  <%= render :partial => 'activity/activity_menu' %>

  <!-- tab_cont -->
  <div class="tab_cont">
    
    <!-- sessions_menu -->
    <%= render :partial => 'activity/sessions_date' %>
    <!-- /sessions_menu -->
    
    <!-- discussion_cont -->
    <div class="discussion_cont">
      <h2>Sesión del <%= @session_date %></h2>
      <!-- discussion_list -->
      <div class="discussion_list">
                               
        <% if !@interventions.blank? %>
          <% for inter in @interventions %>
            <div class="activity discussion">
              <h3 class="title"><%= link_to inter.subject_title, intervention_path(inter) %></h3>
