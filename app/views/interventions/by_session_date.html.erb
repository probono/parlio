              </dl>-->
            </div>
            
          <% end %>
        <% end %>
        
      </div>
      <!-- /discussion_list -->
    </div>
    <!-- /discussion_cont -->
    
    <!-- discussion_sidebar -->
    <div class="discussion_sidebar">
      <!-- parliamentarians_mod -->
      <div class="parliamentarians_mod">
        <h3>Ausentes en la sesión</h3>
        <!-- parliamentarians_list -->
        <div class="parliamentarians_list">
  
